apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: '{{ item.user }}-{{ item.role }}-{{ item.namespace }}-namespace'
  namespace: '{{ item.namespace }}'
  labels:
    app: workshop
subjects:
- kind: User
  name: '{{ item.user  }}'
  namespace: '{{ item.namespace }}'
roleRef:
  kind: ClusterRole
  name: '{{ item.role }}'
  apiGroup: rbac.authorization.k8s.io